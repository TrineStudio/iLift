<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.Sitp.ilift"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-permission android:name = "android.permission.INTERNET"/>
    <uses-permission android:name = "android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/> 
    <uses-permission android:name = "android.permission.CAMERA" /> 
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <supports-screens android:anyDensity="true" android:largeScreens="true" android:normalScreens="true" android:smallScreens="true"/>

    <application android:debuggable = "true" android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name="com.ilift.activities.iLift"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	<activity android:name = "com.ilift.activities.Information" android:theme="@android:style/Theme.NoTitleBar"></activity>
	<activity android:name = "com.ilift.activities.driverMap" android:theme="@android:style/Theme.NoTitleBar"></activity>
	<activity android:name = "com.ilift.activities.Setting" android:theme="@android:style/Theme.NoTitleBar"></activity>
	<activity android:name = "com.ilift.activities.detail" android:theme="@android:style/Theme.NoTitleBar"></activity>
	<activity android:name = "com.ilift.activities.status" android:theme="@android:style/Theme.NoTitleBar"></activity>
	<activity android:name = "com.ilift.activities.register" android:theme="@android:style/Theme.NoTitleBar"></activity>
	<activity android:name = "com.ilift.activities.itemDrawer" android:theme="@android:style/Theme.NoTitleBar"></activity>
	<activity android:name = "com.ilift.activities.MainPage" android:theme="@android:style/Theme.NoTitleBar"></activity>
	<activity android:name = "com.ilift.activities.NewItem" android:theme="@android:style/Theme.NoTitleBar"></activity>
	<activity android:name = "com.ilift.usage.FlyingPhoto" android:theme="@android:style/Theme.NoTitleBar"></activity>
	<activity android:name = "com.ilift.activities.ItemTrip" android:theme="@android:style/Theme.NoTitleBar"></activity>
	<!--<uses-library android:name = "com.google.android.maps"/>-->
    </application>
    
    <uses-sdk android:minSdkVersion="8" />

</manifest> 